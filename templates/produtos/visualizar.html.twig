{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Detalhes do Produto</h1>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{ produto.nome }}</h5>
            <p class="card-text"><strong>Descrição:</strong> {{ produto.descricao }}</p>
            <p class="card-text"><strong>Preço:</strong> R$ {{ produto.preco }}</p>
            <a href="/produtos/editar/{{ produto.id }}" class="btn btn-warning">Editar</a>
            <a href="/produtos" class="btn btn-secondary">Voltar</a>
        </div>
    </div>
{% endblock %}